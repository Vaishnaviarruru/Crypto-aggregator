{
  "compilerOptions": {
    "target": "ES2020",              // Modern JS features, safe for Node.js
    "module": "commonjs",            // Compatible with Node
    "rootDir": "./src",              // Where your TypeScript files live
    "outDir": "./dist",              // Where compiled JS will go
    "esModuleInterop": true,         // Enables default import compatibility
    "strict": true,                  // Enables all strict type checks
    "skipLibCheck": true,            // Skip type checking for libraries
    "resolveJsonModule": true,       // Allows importing JSON files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                // Only compile files in src/
  "exclude": ["node_modules", "dist"]
}
